            max-height: 70vh;
            height: 70vh;
        }

        .pc-collection-item-{{section.id}}:not(:first-child) {
            margin-top: 0px;
        }

        .pc-collection-item-{{section.id}}.active {
            height: 70vh;
            flex: 0 0 calc(((100% / 7) * 3) - 4px);
        }

        .pc-collection-image-{{section.id}} {
            width: calc(((100vw - 10rem - 0px) / 7 * 3) - 4px);
        }

        .pc-collection-content-{{section.id}} {
            width: calc(((100vw - 10rem - 0px - 120px) / 7 * 3) - 4px);
        }

        .pc-collection-reverse-{{section.id}} {
            transform: rotate(180deg);
            writing-mode: vertical-lr;
        }

        .pc-collection-title-{{section.id}},
        .pc-collection-title-{{section.id}} * {
            text-align: left;
            font-size: {{ card_heading_size }}px;
        }

        .pc-collection-stars-{{section.id}} {
                margin-top: 16px;
                justify-content: start;
            }

            .pc-collection-text-{{section.id}} {
                margin-top: 14px;
