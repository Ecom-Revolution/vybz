<style>
    :root {
        --pc-desktop-height: ;
    }

    .pc-section-{{section.id}} {
        margin-top: {{ layout_margin_top }};
        margin-bottom: {{ layout_margin_bottom }};
    }

    .pc-section-{{section.id}}-settings {
        margin: 0 auto;
        padding-top: 27px;
        padding-bottom: 45px;
        padding-left: 1.5rem;
        padding-right: 1.5rem;
    }

    .pc-collection-heading-{{section.id}} {
        text-align: {{ heading_position_mobile }};
    }

    .pc-collection-heading-{{section.id}} * {
        margin: 0;
        font-size: {{ heading_size_mobile }}px;
        color: {{ heading_color }};
        line-height: 150%;
        text-transform: unset;
        font-weight: {{ heading_weight }};
        font-family: {{ heading_font.family }}{% if heading_font.fallback_families != blank %},{{ heading_font.fallback_families }}{% endif %};
    }

    .pc-collection-grid-{{section.id}} {
        margin-top: 18px;
        display: block;
        gap: 4px;
        align-items: stretch;
        padding: 0px 0px;
        border-radius: 0px;
        border: 0px solid #000000;
        background-color: #ffffff;
    }

    .pc-collection-item-{{section.id}} {
        display: flex;
        flex-direction: column;
        position: relative;
        flex: 0 0 calc((100% / 7) - 4px);
        transition: all 0.25s ease-out 0s;
        overflow: hidden;
        padding: 32px 24px;
        border-radius: {{ card_border_radius }}px;
        border: {{ card_border_width }}px {{ card_border_style }} {{ card_border_color }};
        background-color: {{ card_color }};
        cursor: pointer;
        max-height: 88px;
        height: 100%;
    }

    .pc-collection-item-{{section.id}}.active {
        max-height: 100vh;
        transition: all 0.25s ease-out 0s;
    }

    .pc-collection-item-{{section.id}}:not(:first-child) {
        margin-top: 4px;
    }

    /* .pc-collection-item-{{section.id}}.active {
    transition: all 0.25s ease-out 0s;
    flex: 0 0 calc(((100% / 7) * 3) - 4px);
  } */

    .pc-collection-image-{{section.id}} {
        position: absolute;
        width: 100%;
        /* width: calc((((100vw-3.0rem - 0px) / 7) * 3) - 4px); */
        height: 100%;
        left: 0;
        top: 0;
        border-radius: {{ card_border_radius }}px;
    }

    .pc-collection-image-{{section.id}}:after {
        position: absolute;
        content: '';
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        border-radius: {{ card_border_radius }}px;
        background-color: rgba(0, 0, 0, {{ card_opacity }});
    }

    .pc-collection-image-{{section.id}} img,
    .pc-collection-image-{{section.id}} svg {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 8px;
    }

    .pc-collection-image-{{section.id}} svg {
        /* background-color: #ba1e1e; */
    }

    .pc-collection-reverse-{{section.id}} {
        position: relative;
        z-index: 2;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        width: 100%;
        height: 100%;
    }

    .pc-collection-reverse-{{section.id}} .pc-collection-title-{{section.id}} {
        padding-bottom: 0px;
    }

    .pc-collection-reverse-{{section.id}} .pc-collection-title-{{section.id}}:after {
        display: none;
    }

    .pc-collection-item-{{section.id}}.active .pc-collection-reverse-{{section.id}} {
        display: none;
    }

    .pc-collection-content-{{section.id}} {
        position: relative;
        z-index: 2;
        display: none;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        gap: 20px;
    }

    .pc-collection-item-{{section.id}}.active .pc-collection-content-{{section.id}} {
        display: flex;
    }

    .pc-collection-title-{{section.id}},
    .pc-collection-title-{{section.id}} * {
        text-align: left;
        margin: 0;
        font-size: {{ card_heading_size_mobile }}px;
        color: {{ card_heading_color }};
        line-height: 100%;
        text-transform: uppercase;
        font-weight: {{ card_heading_weight }};
        font-family: {{ card_heading_font.family }}{% if card_heading_font.fallback_families != blank %}, {{ card_heading_font.fallback_families }}{% endif %};
    }

    .pc-collection-stars-{{section.id}} {
        margin-top: 12px;
        display: flex;
        align-items: center;
        gap: 5px;
        justify-content: start;
    }

    .pc-collection-stars-{{section.id}} svg,
    .pc-collection-stars-{{section.id}} img {
        display: block;
        width: 22px;
        height: 22px;
        object-fit: cover;
        flex: 0 0 22px;
    }

    .pc-collection-text-{{section.id}} {
        margin-top: 11px;
    }

    .pc-collection-text-{{section.id}} * {
        margin: 0;
    }

    .pc-collection-text-{{section.id}},
    .pc-collection-text-{{section.id}} * {
        text-align: left;
        font-size: {{ card_subheading_size_mobile }}px;
        color: {{ card_subheading_color }};
        font-weight: {{ card_subheading_weight }};
        font-family: {{ card_subheading_font.family }}{% if card_subheading_font.fallback_families != blank  %}, {{ card_subheading_font.fallback_families }}{% endif %};
        line-height: 150%;
        text-transform: unset;
    }

    .pc-collection-btn-{{section.id}} {
        display: flex;
        align-items: center;
        justify-content: center;
        max-width: fit-content;
        margin: 0;
        font-size: {{ card_button_size_mobile }}px;
        font-weight: {{ card_button_weight }};
        color: {{ card_button_color }};
        line-height: 100%;
        text-align: center;
        text-transform: unset;
        text-decoration: none;
        padding: 9px 15px;
        border-radius: {{ card_button_radius }}px;
        border: {{ card_button_border_width }}px {{ card_button_border_style }} {{ card_button_border_color }};
        background-color: {{ card_button_background_color }};
        transition: all 0.25s ease 0s;
        font-family: {{ card_button_font.family }}{% if card_button_font.fallback_families != blank %}, {{ card_button_font.fallback_families }}{% endif %} ;
    }

    .pc-collection-btn-{{section.id}}:hover {
        color:  {{ card_button_hover_color }};
        border: {{ card_button_border_width }}px {{ card_button_border_style }} {{ card_button_border_color  }};
        background-color: {{ card_button_hover_background_color }};
        transition: all 0.25s ease 0s;
    }

    @media(min-width: 1024px) {
