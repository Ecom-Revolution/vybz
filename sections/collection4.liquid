                font-size: {{ card_subheading_size }}px;
            }

            .pc-collection-btn-{{section.id}} {
                padding: 12px 20px;
                font-size: {{ card_button_size }}px;
            }
        }

        .pc-section-{{section.id}}-settings {
            max-width: 130rem;
        }

        @media(min-width: 1024px) {
            .pc-collection-image-{{section.id}} {
                width: calc((((140rem - 10rem - 0px) / 7) * 3) - 4px);
            }

            .pc-collection-content-{{section.id}} {
                width: calc((((140rem - 10rem - 0px - 96px) / 7) * 3) - 4px);
            }
        }

        @media(min-width: 1024px) {
            .pc-collection-item-{{section.id}} {
                aspect-ratio: 12/12 !important;
            }
        }

        .pc-collection-title-{{section.id}} {
            position: relative;
            padding-bottom: 12px;
        }

        .pc-collection-title-{{section.id}}:after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            height: 2px;
            width: 100%;
            background-color: {{ card_line_color }};
        }

        @media(min-width: 1024px) {
            .pc-collection-btn-{{section.id}} {
                margin-left: 0px;
                margin-right: 0px;
            }
        }
</style>


